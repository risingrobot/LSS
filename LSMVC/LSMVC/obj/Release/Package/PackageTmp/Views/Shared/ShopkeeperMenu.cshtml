
@{
    ViewBag.Title = "ShopkeeperMenu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .centered {
        margin: 0 auto;
        text-align: left;
        width: 800px;
    }
    .LBox {
        width: 400px;
        height: 400px;
        border: double;
        float: left;
        text-align: center;
        -webkit-transition: width 2s, height 4s; /* For Safari 3.1 to 6.0 */
        transition: width 2s, height 4s;
    }
    .RBox {
        width: 400px;
        height: 400px;
        border: double;
        float: left;
        text-align: center;
        -webkit-transition: width 2s, height 4s; /* For Safari 3.1 to 6.0 */
        transition: width 2s, height 4s;
    }
    
    .LBox:hover {
        background-color: lightblue;
        width: 300px;
        height: 300px;
    }
    .RBox:hover {
        background-color: lightblue;
        width: 300px;
        height: 300px;
    }
   
    </style>
<div class="centered">
<div id="id_maintain" style="width:800px">
    <div id="LBox" class="LBox">
                 @Html.ActionLink("Look Over Shops", "ChooseShop", "UserRegister")
           
        </div>
<div id="RBox" class="RBox">
   
        @Html.ActionLink("Go Shopping", "ShowShops", "ShowShops")
    
    </div>
</div>
</div>
<script type="text/javascript">
    $('#LBox').click(function (e) {

        var url = '@Url.Action("MaintainShop", "Item")';
        window.location.href = url;

    });
    $('#RBox').click(function (e) {
        var url = '@Url.Action("ShowShops", "ShowShops")';
        window.location.href = url;
    });

    </script>